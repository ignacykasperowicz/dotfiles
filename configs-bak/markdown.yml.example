defaults: &defaults
  options:
    filter_html: true
    hard_wrap: true
    link_attributes:
      rel: 'nofollow'
      target: "_blank"
    space_after_headers: true
    fenced_code_blocks: true
  extensions:
    autolink: true
    superscript: true
    disable_indented_code_blocks: true

development:
  <<: *defaults

production:
  <<: *defaults

test:
  <<: *defaults

staging:
  <<: *defaults